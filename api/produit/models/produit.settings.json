{
  "kind": "collectionType",
  "collectionName": "produits",
  "info": {
    "name": "Produit",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "titre": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "meta_description": {
      "type": "string"
    },
    "prix": {
      "type": "decimal",
      "required": true
    },
    "stock": {
      "type": "integer",
      "required": true,
      "default": 0
    },
    "note": {
      "type": "decimal"
    },
    "collections": {
      "via": "produits",
      "collection": "collection",
      "dominant": true
    },
    "image": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "slug": {
      "type": "uid",
      "targetField": "titre"
    },
    "categories": {
      "via": "produits",
      "collection": "categorie"
    },
    "enPromotion": {
      "type": "boolean",
      "default": false
    },
    "prixPromotion": {
      "type": "decimal",
      "default": 0
    },
    "tag": {
      "type": "component",
      "repeatable": true,
      "component": "produit.tag"
    },
    "taille": {
      "type": "string"
    },
    "couleur": {
      "type": "enumeration",
      "enum": [
        "Rouge",
        "Bleu",
        "Noir",
        "Blanc",
        "Vert",
        "Violet",
        "Orange",
        "Gris",
        "Jaune",
        "Rose"
      ]
    },
    "poids": {
      "type": "string"
    },
    "Expedition": {
      "type": "component",
      "repeatable": false,
      "component": "produit.expedition",
      "required": true
    },
    "commandes": {
      "via": "produits",
      "collection": "commande"
    }
  }
}
